                <div id="download">
                    processing plots (download not (yet) ready)
                </div>
            </p>
            <p>
                <textarea id="output" cols="100" rows="30" wrap="soft" readonly="readonly">init...</textarea>
            </p>
        </div> <!--END center-->
        <div class="spacer"></div>
    </div> <!--END horizontal-box-->
